@model List<Portfolio.Models.Service>
@{
    ViewBag.Title = "Index";
    int sira = 1;
}

    <div class="page">
        <div id="room">

            <div class="header mb-5">
                <div class="row">
                    <div class="col-md-6">
                        <h1><i class="fas fa-user-cog"></i>Services</h1>
                    </div>

                    <div class="col-md-6 text-right">
                        <a href="@Url.Action("create", "services", new { Area = "Manage"})" class="btn btn-success">Create new Service</a>
                    </div>
                </div>
            </div>

            <table class="table table-hover">
                <thead class="thead-dark">
                    <tr>
                        <th>#</th>
                        <th>Icon</th>
                        <th>Title</th>
                        <th>Description</th>
                        <th>#</th>
                    </tr>
                </thead>

                <tbody style="background-color: lavender;">
                    @foreach (var items in Model)
                    {
                        <tr>
                            <td>
                                @(sira++)
                            </td>
                            <td>
                                <div class="icon">
                                    <i class="@items.Icon"></i>
                                </div>
                            </td>
                            <td>
                                @items.Name
                            </td>
                            <td>
                                @items.Description
                            </td>
                            <td>
                                <a href="@Url.Action("edit", "services", new { Area = "Manage", Id = items.Id})" class="btn btn-info text-white edit">Edit</a>
                                <a onclick="return confirm('Are you sure want to remove the selected one?')" href="@Url.Action("remove", "services", new { id = items.Id, Area = "Manage" })" class="btn btn-danger text-white">Remove</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>