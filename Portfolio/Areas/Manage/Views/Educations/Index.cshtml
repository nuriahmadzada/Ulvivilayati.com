@model List<Portfolio.Models.Education>
@{
    ViewBag.Title = "Index";
    int sira = 1;
}

    <div class="page">
        <div id="room">

            <div class="header mb-5">
                <div class="row">
                    <div class="col-md-6">
                        <h1><i class="fas fa-graduation-cap"></i>Education</h1>
                    </div>

                    <div class="col-md-6 text-right">
                        <a href="@Url.Action("create", "educations", new { Area = "Manage"})" class="btn btn-success">Create new Education List</a>
                    </div>
                </div>
            </div>

            <table class="table table-hover">
                <thead class="thead-dark">
                    <tr>
                        <th>#</th>
                        <th>Year</th>
                        <th>Place</th>
                        <th>Faculty</th>
                        <th>Briefing</th>
                        <th>#</th>
                    </tr>
                </thead>

                <tbody style="background-color: lavender;">
                    @foreach (var items in Model)
                    {
                        <tr>
                            <td>
                                @(sira++)
                            </td>
                            <td>
                                @items.Year
                            </td>
                            <td>
                                @items.Place
                            </td>
                            <td>
                                @items.Faculty
                            </td>
                            <td>
                               @items.Description
                            </td>
                            <td>
                                <a href="@Url.Action("edit", "educations", new { Area = "Manage", Id = items.Id})" class="btn btn-info text-white edit">Edit</a>
                                <a onclick="return confirm('Are you sure want to remove the selected one?')" href="@Url.Action("remove", "educations", new { id = items.Id, Area = "Manage" })" class="btn btn-danger text-white">Remove</a>
                            </td>
                        </tr>
                    }

                </tbody>
            </table>
        </div>
    </div>