@model Portfolio.Models.Education
@{
    ViewBag.Title = "Edit";
}

<div class="page">
    <div id="room">
        <div class="header mb-5">
            <div class="row">
                <div class="col-md-6">
                    <h1><i class="fas fa-graduation-cap"></i>Education - Editing</h1>
                </div>

                <div class="col-md-6 text-right">
                    <a href="@Url.Action("index", "educations", new { Area = "Manage"})" class="btn btn-primary">Back to Education page</a>
                </div>
            </div>
        </div>

        <form method="post" action="@Url.Action("edit", "educations", new { Area = "Manage" })">
            <input type="hidden" name="Id"  value="@Model.Id"/>
            <div class="form-row">
                <div class="form-group col-md-3">
                    <label for="room-no"><b>Year</b></label>
                    <input type="number" class="form-control" id="room-no" name="Year" value="@Model.Year" required>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-3">
                    <label for="room-no"><b>Place</b></label>
                    <input type="text" class="form-control" id="room-no" name="Place" value="@Model.Place" required>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-3">
                    <label for="room-no"><b>Faculty</b></label>
                    <input type="text" class="form-control" id="room-no" name="Faculty" value="@Model.Faculty" required>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-8">
                    <label for="ex"><b>Briefing</b></label>
                    <textarea class="form-control" id="ex" rows="7" name="Description" required>@Model.Description</textarea>
                </div>
            </div>

            <div class="form-row">
                <div class="col-md-12">
                    <button type="submit" class="btn btn-success" style="width: 150px; height: 50px;">Save</button>
                </div>
            </div>
        </form>
    </div>
</div>

