@model Portfolio.Models.Fact
@{
    ViewBag.Title = "Edit";
}

<div class="page">
    <div id="room">
        <div class="header mb-5">
            <div class="row">
                <div class="col-md-6">
                    <h1><i class="fas fa-grin-squint"></i>Fun Facts - Editing</h1>
                </div>

                <div class="col-md-6 text-right">
                    <a href="@Url.Action("index", "facts", new { Area = "Manage"})" class="btn btn-primary">Back to Service page</a>
                </div>
            </div>
        </div>

        <form action="@Url.Action("edit", "facts", new { Area = "Manage"})" method="post">
            <input type="hidden" name="Id" value="@Model.Id" />
            <div class="form-row">
                <div class="form-group col-md-3">
                    <label for="room-no"><b>Icon</b></label>
                    <input type="text" class="form-control" id="room-no" name="Icon" value="@Model.Icon" required>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-3">
                    <label for="room-no"><b>Title</b></label>
                    <input type="text" class="form-control" id="room-no" name="Title" value="@Model.Title" required>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-3">
                    <label for="ex"><b>Count</b></label>
                    <input type="number" class="form-control" name="Count" value="@Model.Count" required>
                </div>
            </div>

            <div class="form-row">
                <div class="col-md-12">
                    <button type="submit" class="btn btn-success" style="width: 150px; height: 50px;">Save</button>
                </div>
            </div>
        </form>
    </div>
</div>

