
@{
    ViewBag.Title = "Create";
}

<div class="page">
    <div id="room">
        <div class="header mb-5">
            <div class="row">
                <div class="col-md-6">
                    <h1><i class="fas fa-grin-squint"></i>Fun Facts - Create</h1>
                </div>

                <div class="col-md-6 text-right">
                    <a href="@Url.Action("index", "facts", new { Area = "Manage"})" class="btn btn-primary">Back to Facts page</a>
                </div>
            </div> 
        </div>

        <form action="@Url.Action("create", "facts", new { Area = "Manage"})" method="post">
            <div class="form-row">
                <div class="form-group col-md-3">
                    <label for="room-no"><b>Icon</b></label>
                    <input type="text" class="form-control" name="Icon" id="room-no" required>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-3">
                    <label for="room-no"><b>Title</b></label>
                    <input type="text" class="form-control" id="room-no" name="Title" required>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-3">
                    <label for="ex"><b>Count</b></label>
                    <input type="number" class="form-control" name="Count" required>
                </div>
            </div>

            <div class="form-row">
                <div class="col-md-12">
                    <button type="submit" class="btn btn-success" style="width: 150px; height: 50px;">Create</button>
                </div>
            </div>
        </form>
    </div>

</div>
