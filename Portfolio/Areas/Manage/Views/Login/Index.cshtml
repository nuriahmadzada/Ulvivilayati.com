@{
    Layout = null;
}
<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="ThemeMakker">
    <title>Login</title>
    <link rel="stylesheet" href="~/Areas/Manage/Public/assets/vendor/themify-icons/themify-icons.css">
    <link rel="stylesheet" href="~/Areas/Manage/Public/assets/vendor/fontawesome/css/font-awesome.min.css">

    <link rel="stylesheet" href="~/Areas/Manage/Public/assets/css/main.css">
</head>

<body class="theme-indigo">
    <!-- Page Loader -->
    <div class="page-loader-wrapper">
        <div class="loader">
            <div class="m-t-30"><img src="~/Areas/Manage/Public/assets/images/brand/icon_black.svg" width="48" height="48" alt="ArrOw"></div>
            <p>Please Wait...</p>
        </div>
    </div>
    <!-- WRAPPER -->
    <div id="wrapper">
        <div class="vertical-align-wrap">
            <div class="vertical-align-middle auth-main">
                <div class="auth-box">
                    <div class="logo text-center">
                        <h1><a style="color: #2e375f">ADMIN</a></h1>
                    </div>
                    <div class="card">
                        <div class="header">
                            <p class="lead">Login into your Account:</p>
                        </div>
                        <div class="body">
                            <form method="post" action="@Url.Action("index", "login")" class="form-auth-small">
                                <div class="form-group">
                                    <label class="control-label">Email:</label>
                                    <input type="text" name="Email" class="form-control"/>
                                </div>
                                <div class="form-group">
                                    <label class="control-label">Password:</label>
                                    <input type="password" name="Password" class="form-control"/>
                                </div>
                                @Html.ValidationSummary()
                                <button type="submit" class="btn btn-primary btn-lg btn-block">LOGIN</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- END WRAPPER -->
    <!-- Core -->
    <script src="~/Areas/Manage/Public/assets/bundles/libscripts.bundle.js"></script>
    <script src="~/Areas/Manage/Public/assets/bundles/vendorscripts.bundle.js"></script>

    <script src="~/Areas/Manage/Public/assets/js/theme.js"></script>
</body>

</html>