
@{
    ViewBag.Title = "Create";
}

    <div class="page">
        <div id="room">
            <div class="header mb-5">
                <div class="row">
                    <div class="col-md-6">
                        <h1><i class="fas fa-keyboard"></i>Experience - Create</h1>
                    </div>

                    <div class="col-md-6 text-right">
                        <a href="@Url.Action("index", "experiences", new { Area = "Manage"})" class="btn btn-primary">Back to Experience page</a>
                    </div>
                </div>
            </div>

            <form method="post" action="@Url.Action("create", "experiences", new { Area = "Manage" })">
                <div class="form-row">
                    <div class="form-group col-md-3">
                        <label for="room-no"><b>Date</b></label>
                        <input type="text" class="form-control" id="room-no" name="Date" required>
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-md-3">
                        <label for="room-no"><b>Company</b></label>
                        <input type="text" class="form-control" id="room-no" name="Company" required>
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-md-3">
                        <label for="room-no"><b>Position</b></label>
                        <input type="text" class="form-control" id="room-no" name="Position" required>
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-md-8">
                        <label for="ex"><b>Briefing</b></label>
                        <textarea class="form-control" id="ex" rows="7" placeholder="Write something here..." name="Description" required></textarea>
                    </div>
                </div>

                <div class="form-row">
                    <div class="col-md-12">
                        <button type="submit" class="btn btn-success" style="width: 150px; height: 50px;">Create</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
            
