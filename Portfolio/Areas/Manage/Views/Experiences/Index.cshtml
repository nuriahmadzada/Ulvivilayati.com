@model List<Portfolio.Models.Experience>
@{
    ViewBag.Title = "Index";
    int sira = 1;
}

<div class="page">
    <div id="room">

        <div class="header mb-5">
            <div class="row">
                <div class="col-md-6">
                    <h1><i class="fas fa-keyboard"></i>Experience</h1>
                </div>

                <div class="col-md-6 text-right">
                    <a href="@Url.Action("create", "experiences", new { Area = "Manage"})" class="btn btn-success">Create new Experience List</a>
                </div>
            </div>
        </div>

        <table class="table table-hover">
            <thead class="thead-dark">
                <tr>
                    <th>#</th>
                    <th>Year</th>
                    <th>Place</th>
                    <th>Position</th>
                    <th>Briefing</th>
                    <th>#</th>
                </tr>
            </thead>

            <tbody style="background-color: lavender;">
                @foreach (var items in Model)
                {
                    <tr>
                        <td>
                            @(sira++)
                        </td>
                        <td>
                            @items.Date
                        </td>
                        <td>
                            @items.Company
                        </td>
                        <td>
                            @items.Position
                        </td>
                        <td>
                            @items.Description
                        </td>
                        <td>
                            <a href="@Url.Action("edit", "experiences", new { Area = "Manage", id = items.Id})" class="btn btn-info text-white edit">Edit</a>
                            <a onclick="return confirm('Are you sure want to remove the selected one?')" href="@Url.Action("remove", "experiences", new { id = items.Id, Area = "Manage" })" class="btn btn-danger text-white">Remove</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>