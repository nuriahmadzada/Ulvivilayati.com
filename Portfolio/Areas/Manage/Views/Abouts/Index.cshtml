@model Portfolio.Models.About
@{
    ViewBag.Title = "Index";
}

    <div class="page">
        <div id="room">

            <div class="header mb-5">
                <div class="row">
                    <div class="col-md-6">
                        <h1><i class="fas fa-address-card"></i>About Me</h1>
                    </div>

                    <div class="col-md-6 text-left">
                        <a href="@Url.Action("edit", "abouts", new { Area = "Manage", Id = Model.Id })" class="btn btn-primary">Edit your About Page</a>
                    </div>
                </div>
            </div>

            <div class="room-list">

                <div class="row bs-30">
                    <div class="col-xs-6 col-sm-6">
                        <h3>@Model.Title</h3>
                        <p>
                            @Model.Description
                        </p>
                    </div>

                    <div class="col-xs-6 col-sm-6">
                        <ul class="info-list">
                            <li><span class="title"><b>Birthday</b></span><span class="value">@Model.Birthday.ToString("MM/dd/yyyy")</span></li>
                            <li><span class="title"><b>Residence</b></span><span class="value">@Model.Residence</span></li>
                            <li><span class="title"><b>E-mail</b></span><span class="value"><a href="#">@Model.Email</a></span></li>
                            <li><span class="title"><b>Phone</b></span><span class="value">+@Model.Phone</span></li>
                            <li><span class="title"><b>Behance</b></span><span class="value"><a href="#">@Model.Behance</a></span></li>
                            <li><span class="title"><b>Freelance</b></span><span class="value available">Available</span></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>