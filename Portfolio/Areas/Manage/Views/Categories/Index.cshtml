@model List<Portfolio.Models.Category>
@{
    ViewBag.Title = "Index";
    int sira = 1;
}

    <div class="page">
        <div id="room">

            <div class="header">
                <div class="row">
                    <div class="col-md-6">
                        <h1><i class="fas fa-list"></i>Categories</h1>
                    </div>
                    <div class="col-md-6 text-right">
                        <a href="@Url.Action("create", "categories", new { Area = "Manage"})" class="btn btn-success">Create New Category</a>
                    </div>

                </div>
            </div>

            <table class="table table-striped">
                <thead class="thead-dark">
                    <tr>
                        <th>№</th>
                        <th></th>
                        <th>Category</th>
                        <th>#</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var items in Model)
                    {
                        <tr>
                            <td>
                                @(sira++)
                            </td>
                            <td>
                                <div class="icon">
                                    <i class="fas fa-list"></i>
                                </div>

                            </td>
                            <td>@items.Name</td>
                            <td>
                                <a href="@Url.Action("edit", "categories", new { Area = "Manage", id = items.Id})" class="btn btn-info text-white edit">Edit</a>
                                <a onclick="return confirm('Are you sure want to remove the selected one?')" href="@Url.Action("remove", "categories", new { id = items.Id, Area = "Manage" })" class="btn btn-danger text-white">Remove</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>